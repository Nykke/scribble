<h2>Edit comment</h2>

<%= form_for [@post, @comment] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :content %>
  <%= f.text_field :content%>

  <%= f.label :author %>
  <%= f.text_field :author %>>


  <%= f.submit %>
<% end %>

<%= form_for [@post,@comment], method: :delete do |f| %>
  <%= f.submit "Delete!", class: "delete" %>
<% end %>
