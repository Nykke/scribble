<h3><%= @post.title %></h3>
 <br />
   <h5><%= @post.author %> <%= @post.date_time %> <%= @post.created_at %> </h5>
 <br />
 <article>
   <p><%= @post.text %>
     <%= @post.img_url %>
   </p>
</article>
<%= link_to "New Post", new_post_path(@post) %> <span><%= link_to "Edit Post", edit_post_path %></span> <span><%= link_to "Delete Post", edit_post_path %></span>


 <h4>Comments <%= link_to "New Comment", new_post_comment_path(@post) %></h4>

 <% @post.comments.each do |comment| %>

  <p>
    <%= comment.content %>
    <h5><%= comment.name %> <%= comment.date_time %> <%= comment.created_at %></h5>
  </p>
  <% end %>
