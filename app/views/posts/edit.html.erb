<h2>Edit Post</h2>

<%= form_for @post do |f| %>
  <%=f.label :title %>
  <%= f.text_field :title %>

  <%=f.label :author %>
  <%=f.text_field :author %>

  <%=f.label :text %>
  <%= f.text_area :text%>

  <%=f.label :img_url %>
  <%=f.text_field :img_url %>
<% end %> 

<%= form_for @post, method: :delete do |f| %>
  <%= f.submit "Delete!", class: "delete" %>
<% end %>
